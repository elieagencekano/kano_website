---
import "../styles/global.css";
import Intro from "../components/Intro.astro";
import Header from "../components/layout/Header.astro";
import BackgroundLiquid from "../components/layout/BackgroundLiquid.astro";
import Footer from "../components/layout/Footer.astro";
import CookieBanner from "../components/cookies/CookieBanner.astro";

const { title = "KANO", description = "" } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta name="theme-color" media="(prefers-color-scheme: light)" content="#0a0f16" />
    <meta name="theme-color" media="(prefers-color-scheme: dark)" content="#0a0f16" />

    <title>{title}</title>
    <meta name="description" content={description} />

<!-- OpenGraph -->
<meta property="og:title" content="KANO – Votre partenaire digital à Angers" />
<meta property="og:description" content="Création de sites web performants, 100% codés, rapides et orientés conversion." />
<meta property="og:image" content="https://consultingkano.fr/opengraph.jpg" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:url" content="https://consultingkano.fr" />
<meta property="og:type" content="website" />
<meta property="og:site_name" content="KANO" />

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content="KANO – Votre partenaire digital à Angers" />
<meta name="twitter:description" content="Création de sites web performants, 100% codés, rapides et orientés conversion." />
<meta name="twitter:image" content="https://consultingkano.fr/opengraph.jpg" />

    <link rel="icon" href="/favicon.svg" />
    <link rel="manifest" href="/site.webmanifest" />

    <style>
      html{
        margin:0; padding:0;
        overflow-x:hidden; overflow-y:scroll;
        background:#0a0f16;
      }
      body{
        margin:0; padding:0;
        font-family:"Poppins",system-ui,-apple-system,"Segoe UI",Roboto,sans-serif;
        background:transparent; color:#fff;
        overflow-x:clip; position:relative;
      }
      body::before{
        content:""; position:fixed;
        top:-35vh; left:-15vw; right:-15vw; bottom:-35vh;
        z-index:-10;
        background:
          radial-gradient(1400px 1000px at 12% -10%, #0b1526 0%, #0b1526 50%, transparent 70%),
          radial-gradient(1000px 800px at 88% 8%,  #132a46 0%, #132a46 30%, transparent 65%),
          linear-gradient(180deg,#0b1526 0%, #0a0f16 100%);
        pointer-events:none;
      }
    </style>
  </head>

  <body>
    <CookieBanner />

    <Intro />
    <Header />
    <BackgroundLiquid />

    <slot />

    <Footer />

    <script>
      (function () {
        const consent = localStorage.getItem("kano_cookie_consent");

        if (consent === "accepted") {
          const gaScript = document.createElement("script");
          gaScript.async = true;
          gaScript.src = "https://www.googletagmanager.com/gtag/js?id=G-NS8LN5FVEZ";
          document.head.appendChild(gaScript);

          const gaConfig = document.createElement("script");
          gaConfig.innerHTML = `
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', 'G-NS8LN5FVEZ');
          `;
          document.head.appendChild(gaConfig);
        }
      })();
    </script>
  </body>
</html>