---
const benefits = [
  {
    icon: `<path d="M12 2L2 7l10 5 10-5-10-5z"/><path d="M2 17l10 5 10-5M2 12l10 5 10-5"/>`,
    title: "Propriétaire à vie",
    description: "Après 12 mois, le site est entièrement vôtre"
  },
  {
    icon: `<rect x="2" y="3" width="20" height="14" rx="2"/><path d="M8 21h8M12 17v4"/>`,
    title: "Hébergement premium",
    description: "Performances optimales et sécurité maximale"
  },
  {
    icon: `<path d="M21 15v4a2 2 0 01-2 2H5a2 2 0 01-2-2v-4M17 8l-5-5-5 5M12 3v12"/>`,
    title: "Mises à jour incluses",
    description: "Votre site reste à jour sans frais supplémentaires"
  },
  {
    icon: `<path d="M21 11.5a8.38 8.38 0 01-.9 3.8 8.5 8.5 0 01-7.6 4.7 8.38 8.38 0 01-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 01-.9-3.8 8.5 8.5 0 014.7-7.6 8.38 8.38 0 013.8-.9h.5a8.48 8.48 0 018 8v.5z"/>`,
    title: "Support prioritaire",
    description: "Une équipe réactive pour vous accompagner"
  }
];

const hrefWithBase = (h) => {
  const base = import.meta.env.BASE_URL;
  if (h.startsWith("#")) return `${base}${h}`;
  if (h.startsWith("/")) return base + h.slice(1);
  return h;
};
---

<section class="pricing" aria-label="Tarifs">
  <div class="container-pricing">
    <div class="header-pricing">
      <h2>Votre site premium, accessible</h2>
      <p class="intro-pricing">Un modèle de financement transparent et avantageux.</p>
    </div>

    <div class="pricing-split">
      <div class="pricing-top glass">
        <div class="price-block">
          <div class="price-row">
            <div class="price-item">
              <span class="price-amount">150€</span>
              <span class="price-period">/mois</span>
            </div>
            <span class="price-duration">pendant 12 mois</span>
          </div>
          <div class="price-arrow">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </div>
          <div class="price-row">
            <div class="price-item">
              <span class="price-amount">50€</span>
              <span class="price-period">/mois</span>
            </div>
            <span class="price-duration">ensuite, sans engagement</span>
          </div>
        </div>

        <p class="explain-main">Vous financez votre site sur 12 mois, puis ne payez que l'hébergement premium.</p>

        <a href={hrefWithBase("#contact")} class="cta-pricing">
          <span>Échanger sur votre projet</span>
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>

        <p class="pricing-note">* Premier apport de 1 000€ pour lancer la création de votre site</p>
      </div>

      <div class="pricing-bottom">
        {benefits.map((benefit) => (
          <div class="benefit-card glass">
            <div class="benefit-icon">
              <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <Fragment set:html={benefit.icon} />
              </svg>
            </div>
            <h3 class="benefit-title">{benefit.title}</h3>
            <p class="benefit-description">{benefit.description}</p>
          </div>
        ))}
      </div>
    </div>

    <p class="disclaimer">Offre valable pour un site vitrine jusqu'à 5 pages. Conditions détaillées sur demande.</p>
  </div>
</section>

<style>
.pricing{position:relative;padding:100px 0;overflow:hidden;z-index:1}
.container-pricing{max-width:1280px;margin:0 auto;padding:0 32px}
.header-pricing{text-align:center;max-width:700px;margin:0 auto 80px;animation:fadeUp 700ms ease-out}
@keyframes fadeUp{from{opacity:0;transform:translateY(20px)}to{opacity:1;transform:translateY(0)}}
.header-pricing h2{font-size:clamp(2rem,3.5vw,3rem);margin:0 0 16px;background:linear-gradient(135deg,#fff 0%,rgba(255,255,255,.85) 100%);-webkit-background-clip:text;-webkit-text-fill-color:transparent;background-clip:text;font-family:Montserrat,sans-serif;font-weight:800}
.intro-pricing{font-size:1.15rem;color:var(--kano-light);opacity:.88;line-height:1.6;margin:0}
.pricing-split{max-width:1100px;margin:0 auto}
.glass{background:rgba(255,255,255,.06);border:1px solid rgba(255,255,255,.2);backdrop-filter:blur(12px);-webkit-backdrop-filter:blur(12px);box-shadow:0 10px 30px rgba(0,0,0,.25)}
.pricing-top{border-radius:24px;padding:48px 48px 16px;margin-bottom:32px;animation:scaleUp 800ms ease-out .2s backwards;display:flex;flex-direction:column;align-items:center;gap:28px;position:relative}
@keyframes scaleUp{from{opacity:0;transform:scale(.95)}to{opacity:1;transform:scale(1)}}
.price-block{display:flex;align-items:flex-start;gap:40px;justify-content:center;margin-bottom:12px;width:100%;max-width:fit-content;margin-left:auto;margin-right:auto;position:relative;left:0}
.price-row{display:flex;flex-direction:column;gap:12px;align-items:center;width:205px}
.price-item{display:flex;align-items:baseline;gap:6px}
.price-amount{font-size:4rem;font-family:Montserrat,sans-serif;font-weight:900;color:#fff;line-height:1}
.price-period{font-size:1.4rem;color:var(--kano-light);opacity:.8;font-weight:600}
.price-duration{font-size:1rem;color:var(--kano-light);opacity:.75;text-align:center}
.price-arrow{display:flex;align-items:center;justify-content:center;width:56px;height:56px;border-radius:50%;background:linear-gradient(135deg,rgba(212,175,55,.2),rgba(212,175,55,.08));border:1px solid rgba(212,175,55,.3);margin-top:8px;flex-shrink:0}
.price-arrow svg{color:var(--kano-gold)}
.explain-main{font-size:1.3rem;color:var(--kano-light);opacity:.9;line-height:1.7;margin:0;text-align:center;max-width:600px;font-weight:500}
.cta-pricing{display:inline-flex;align-items:center;gap:10px;padding:18px 36px;border-radius:999px;background:var(--kano-gold);color:var(--kano-ink);font-weight:700;font-size:1.08rem;text-decoration:none;transition:all .3s cubic-bezier(.4,0,.2,1);box-shadow:0 8px 26px rgba(212,175,55,.3);margin:8px 0 20px 0}
.cta-pricing:hover{transform:translateY(-3px);box-shadow:0 12px 32px rgba(212,175,55,.45)}
.pricing-note{position:absolute;bottom:12px;right:24px;font-size:.75rem;color:var(--kano-light);opacity:.55;margin:0;font-style:italic;text-align:right}
.pricing-bottom{display:grid;grid-template-columns:repeat(4,1fr);gap:20px;animation:fadeUp 800ms ease-out .4s backwards}
.benefit-card{padding:32px 24px;border-radius:16px;display:flex;flex-direction:column;align-items:center;text-align:center;gap:16px;transition:transform .3s ease,box-shadow .3s ease}
.benefit-card:hover{transform:translateY(-6px);box-shadow:0 16px 40px rgba(0,0,0,.35)}
.benefit-icon{width:56px;height:56px;border-radius:12px;background:linear-gradient(135deg,rgba(212,175,55,.15),rgba(212,175,55,.05));border:1px solid rgba(212,175,55,.25);display:flex;align-items:center;justify-content:center}
.benefit-icon svg{color:var(--kano-gold)}
.benefit-title{font-size:1.1rem;font-weight:800;color:#fff;margin:0;font-family:Montserrat,sans-serif}
.benefit-description{font-size:.9rem;color:var(--kano-light);opacity:.8;line-height:1.5;margin:0}
.disclaimer{text-align:center;margin-top:48px;font-size:.85rem;color:var(--kano-light);opacity:.6;max-width:800px;margin-left:auto;margin-right:auto}
@media (max-width:1024px){
  .pricing-top{padding:48px 40px 16px}
  .pricing-bottom{grid-template-columns:repeat(2,1fr);gap:16px}
  .price-amount{font-size:3rem}
}
@media (max-width:768px){
  .pricing{padding:80px 0}
  .container-pricing{padding:0 20px}
  .header-pricing{margin-bottom:60px}
  .pricing-top{padding:36px 28px 16px;margin-bottom:24px;gap:24px}
  .price-block{flex-direction:column;gap:20px;align-items:center}
  .price-arrow{transform:rotate(90deg);margin-top:0}
  .price-amount{font-size:2.5rem}
  .explain-main{font-size:1.1rem}
  .cta-pricing{padding:16px 28px;font-size:1rem;white-space:nowrap;margin-bottom:16px}
  .pricing-note{text-align:center;padding-right:0;position:relative;bottom:auto;right:auto}
  .pricing-bottom{grid-template-columns:1fr;gap:16px}
  .disclaimer{margin-top:40px}
}
@media (max-width:380px){
  .cta-pricing{padding:14px 24px;font-size:.95rem}
  .cta-pricing span{display:block;white-space:normal;text-align:center;line-height:1.3}
}
</style>