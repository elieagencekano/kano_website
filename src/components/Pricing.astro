---
const pricingFeatures = [
  "Site web premium",
  "Maintenance incluse",
  "Support prioritaire",
  "Mises à jour illimitées",
  "Hébergement sécurisé",
  "Certificat SSL inclus"
];

const hrefWithBase = (h) => {
  const base = import.meta.env.BASE_URL;
  if (h.startsWith("#")) return `${base}${h}`;
  if (h.startsWith("/")) return base + h.slice(1);
  return h;
};
---

<section class="pricing" aria-label="Tarifs">
  <div class="container-pricing">
    <div class="header-pricing">
      <h2>Votre site premium, accessible</h2>
      <p class="intro-pricing">Un investissement maîtrisé pour un résultat qui dure.</p>
    </div>

    <div class="split-wrapper">
      <div class="split-left glass-split">
        <div class="price-badge">
          <span class="label-from">À partir de</span>
          <div class="price-main">
            <span class="amount">150€</span>
            <span class="period">/mois</span>
          </div>
        </div>

        <div class="price-details">
          <div class="detail-item">
            <span class="detail-label">Apport initial</span>
            <span class="detail-value">1 000€</span>
          </div>
          <div class="detail-separator"></div>
          <div class="detail-item">
            <span class="detail-label">Engagement</span>
            <span class="detail-value">12 mois</span>
          </div>
        </div>

        <p class="price-note">Soit un investissement total de 2 800€ étalé sur un an</p>
      </div>

      <div class="split-right glass-split">
        <h3 class="included-title">Ce qui est inclus</h3>
        
        <ul class="features-list">
          {pricingFeatures.map((feature) => (
            <li>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                <path d="M5 12L10 17L20 7"/>
              </svg>
              <span>{feature}</span>
            </li>
          ))}
        </ul>

        <a href={hrefWithBase("#contact")} class="cta-pricing">
          <span>Échanger sur votre projet</span>
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>

    <p class="disclaimer">* Conditions détaillées sur demande. Offre valable pour un site vitrine jusqu'à 5 pages.</p>
  </div>
</section>

<style>
.pricing{position:relative;padding:100px 0;overflow:hidden;z-index:1}
.container-pricing{max-width:1280px;margin:0 auto;padding:0 32px}
.header-pricing{text-align:center;max-width:700px;margin:0 auto 80px;animation:fadeUp 700ms ease-out}
@keyframes fadeUp{from{opacity:0;transform:translateY(20px)}to{opacity:1;transform:translateY(0)}}
.header-pricing h2{font-size:clamp(2rem,3.5vw,3rem);margin:0 0 16px;background:linear-gradient(135deg,#fff 0%,rgba(255,255,255,.85) 100%);-webkit-background-clip:text;-webkit-text-fill-color:transparent;background-clip:text;font-family:Montserrat,sans-serif;font-weight:800}
.intro-pricing{font-size:1.15rem;color:var(--kano-light);opacity:.88;line-height:1.6;margin:0}
.split-wrapper{display:grid;grid-template-columns:1fr 1fr;gap:0;max-width:1100px;margin:0 auto;position:relative}
.glass-split{background:rgba(255,255,255,.06);border:1px solid rgba(255,255,255,.2);backdrop-filter:blur(12px);-webkit-backdrop-filter:blur(12px);box-shadow:0 10px 30px rgba(0,0,0,.25);padding:48px 40px;position:relative;z-index:1;transition:transform .4s ease,box-shadow .4s ease}
.split-left{border-radius:24px 0 0 24px;animation:slideLeft 800ms ease-out .2s backwards}
@keyframes slideLeft{from{opacity:0;transform:translateX(-40px)}to{opacity:1;transform:translateX(0)}}
.split-right{border-radius:0 24px 24px 0;margin-left:-40px;z-index:2;animation:slideRight 800ms ease-out .4s backwards}
@keyframes slideRight{from{opacity:0;transform:translateX(40px)}to{opacity:1;transform:translateX(0)}}
.split-left:hover{transform:translateX(-8px);box-shadow:0 16px 40px rgba(0,0,0,.35)}
.split-right:hover{transform:translateX(8px);box-shadow:0 16px 40px rgba(212,175,55,.2)}
.price-badge{margin-bottom:32px}
.label-from{display:block;font-size:.9rem;color:var(--kano-light);opacity:.7;margin-bottom:8px;text-transform:uppercase;letter-spacing:1px;font-weight:600}
.price-main{display:flex;align-items:baseline;gap:8px}
.amount{font-size:4rem;font-family:Montserrat,sans-serif;font-weight:900;background:linear-gradient(135deg,var(--kano-gold) 0%,#f4d467 100%);-webkit-background-clip:text;-webkit-text-fill-color:transparent;background-clip:text;line-height:1}
.period{font-size:1.5rem;color:var(--kano-light);opacity:.8;font-weight:600}
.price-details{display:flex;align-items:center;gap:20px;margin-bottom:24px}
.detail-item{display:flex;flex-direction:column;gap:4px}
.detail-label{font-size:.85rem;color:var(--kano-light);opacity:.7;text-transform:uppercase;letter-spacing:.5px}
.detail-value{font-size:1.3rem;font-weight:800;color:#fff}
.detail-separator{width:1px;height:40px;background:linear-gradient(180deg,transparent,rgba(212,175,55,.4),transparent)}
.price-note{font-size:.9rem;color:var(--kano-light);opacity:.7;line-height:1.5;font-style:italic}
.included-title{font-size:1.4rem;font-weight:800;color:#fff;margin:0 0 28px;font-family:Montserrat,sans-serif}
.features-list{list-style:none;display:flex;flex-direction:column;gap:16px;margin:0 0 32px;padding:0}
.features-list li{display:flex;align-items:center;gap:12px;color:var(--kano-light);font-size:1rem;opacity:.9}
.features-list svg{color:var(--kano-gold);flex-shrink:0}
.cta-pricing{display:inline-flex;align-items:center;gap:10px;padding:16px 28px;border-radius:999px;background:var(--kano-gold);color:var(--kano-ink);font-weight:700;font-size:1.05rem;text-decoration:none;transition:all .3s cubic-bezier(.4,0,.2,1);box-shadow:0 8px 26px rgba(212,175,55,.3)}
.cta-pricing:hover{transform:translateY(-3px);box-shadow:0 12px 32px rgba(212,175,55,.45)}
.disclaimer{text-align:center;margin-top:48px;font-size:.85rem;color:var(--kano-light);opacity:.6;max-width:800px;margin-left:auto;margin-right:auto}
@media (max-width:1024px){
  .split-wrapper{max-width:900px}
  .glass-split{padding:40px 32px}
  .amount{font-size:3.5rem}
}
@media (max-width:768px){
  .pricing{padding:80px 0}
  .container-pricing{padding:0 20px}
  .header-pricing{margin-bottom:60px}
  .split-wrapper{grid-template-columns:1fr;gap:0}
  .split-left{border-radius:24px 24px 0 0;animation:slideUp 600ms ease-out .2s backwards}
  @keyframes slideUp{from{opacity:0;transform:translateY(20px)}to{opacity:1;transform:translateY(0)}}
  .split-right{border-radius:0 0 24px 24px;margin-left:0;margin-top:-40px;animation:slideUp 600ms ease-out .4s backwards}
  .split-left:hover,.split-right:hover{transform:none}
  .glass-split{padding:36px 28px}
  .amount{font-size:3rem}
  .period{font-size:1.3rem}
  .price-details{flex-direction:column;align-items:flex-start;gap:16px}
  .detail-separator{width:100%;height:1px;background:linear-gradient(90deg,transparent,rgba(212,175,55,.4),transparent)}
  .disclaimer{margin-top:40px}
}
</style>