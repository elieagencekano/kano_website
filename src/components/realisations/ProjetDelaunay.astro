---
const projet = {
  titre: "Domaine DELAUNAY",
  sousTitre: "Viticulteur en Anjou",
  
  imageFront: "delaunaycardsection.webp",
  imageBack: "delaunaymockupmacbookhome.webp",

  altFront: "Illustration du projet web du domaine vigneron Delaunay avec des verres de vins blancs.",
  altBack: "Mockup MacBook - Site Domaine Delaunay",
  
  smallCards: [
    {
      type: "image",
      src: "delaunaymockupiphonehome.webp",
      alt: "Domaine Delaunay - Mockup iPhone page d'accueil"
    },
    {
      type: "image",
      src: "delaunaymockupiphonecollectionpage.webp",
      alt: "Domaine Delaunay - Mockup iPhone page collection"
    }
  ],
  
  descriptionTitre: "Un site qui freinait les ventes",
  descriptionParagraphes: [
    "Un site <strong>non responsive</strong> fait fuir les visiteurs mobiles. Le Domaine Didier Delaunay souffrait d'une navigation confuse et de <strong>visuels dépassés</strong> qui ne reflétaient plus l'excellence de ses vins. Résultat : des visiteurs qui partent avant même de découvrir les cuvées, et des opportunités de vente manquées."
  ],
  descriptionTitre2: "Une vitrine qui convertit",
  descriptionParagraphes2: [
    "Nous avons créé un <strong>site moderne et responsive</strong> qui transforme les visiteurs en clients. Chaque cuvée dispose d'une <strong>fiche détaillée</strong> avec arômes, terroir et accords mets-vins pour guider le choix. L'<strong>histoire du domaine</strong> met en avant le savoir-faire familial et crée un lien émotionnel avec les visiteurs. Le <strong>formulaire de réservation</strong> simplifié facilite les demandes de dégustation au caveau."
  ],
  lienSite: "https://didier-delaunay.fr",
  lienTexte: "Découvrir le site du Domaine Delaunay"
};
---

<section class="projet-delaunay" aria-label="Projet Domaine Delaunay">
  <div class="container">
    <div class="cards-wrapper">
      <div class="main-card">
        <div class="card-inner">
          <div class="card-front">
            <img src={`/${projet.imageFront}`} alt={projet.altFront} loading="eager" />
            <div class="card-overlay">
              <div class="card-titles">
                <span class="card-subtitle">{projet.sousTitre}</span>
                <h2>{projet.titre}</h2>
              </div>
            </div>
          </div>
          <div class="card-back">
            <div class="mockup-frame">
              <img src={`/${projet.imageBack}`} alt={projet.altBack} loading="eager" />
            </div>
          </div>
        </div>
        
        <div class="scroll-hint">
          <span>Découvrir le projet</span>
          <div class="scroll-hint-arrow">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 5v14M5 12l7 7 7-7"/>
            </svg>
          </div>
        </div>
      </div>
      
      <div class="small-cards">
        {projet.smallCards.map((card) => (
          <div class="small-card">
            <div class="mockup-frame-small">
              <img src={`/${card.src}`} alt={card.alt} loading="lazy" />
            </div>
          </div>
        ))}
      </div>
      
      <div class="project-description">
        <h3>{projet.descriptionTitre}</h3>
        {projet.descriptionParagraphes.map((paragraphe) => (
          <p set:html={paragraphe}></p>
        ))}
        <h3>{projet.descriptionTitre2}</h3>
        {projet.descriptionParagraphes2.map((paragraphe) => (
          <p set:html={paragraphe}></p>
        ))}
        <a href={projet.lienSite} target="_blank" rel="noopener noreferrer" class="project-link">{projet.lienTexte}</a>
        
        <div class="scroll-indicator">
          <span>Voir plus de réalisations</span>
          <div class="scroll-arrow">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 5v14M5 12l7 7 7-7"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
.projet-delaunay{position:relative;min-height:220vh;padding:60px 0}
.container{max-width:1000px;margin:0 auto;padding:0 32px;position:sticky;top:80px}
.cards-wrapper{position:relative;perspective:1500px}
.main-card{width:100%;aspect-ratio:16/10;height:100%;position:relative;transform-style:preserve-3d;overflow:visible;opacity:0;transform:translateY(40px);transition:opacity 1.2s cubic-bezier(0.34,0.46,0.35,1),transform 1.2s cubic-bezier(0.34,0.46,0.35,1)}
.main-card.loaded{opacity:1;transform:translateY(0)}
.card-inner{position:relative;width:100%;height:100%;transform-style:preserve-3d;will-change:transform}
.card-front,.card-back{position:absolute;inset:0;height:100%;backface-visibility:hidden;border-radius:20px;overflow:hidden;box-shadow:0 20px 60px rgba(0,0,0,.4)}
.card-front img{width:100%;height:100%;object-fit:cover;object-position:center}
.card-back{transform:rotateY(180deg);background:rgba(255,255,255,.12);backdrop-filter:blur(20px);-webkit-backdrop-filter:blur(20px);border:1px solid rgba(255,255,255,.25);display:flex;align-items:center;justify-content:center;padding:0}
.mockup-frame{width:100%;height:100%;display:flex;align-items:center;justify-content:center;background:transparent;border-radius:12px;padding:24px}
.mockup-frame img{width:100%;height:100%;object-fit:contain;object-position:center;border-radius:8px}
.card-overlay{position:absolute;inset:0;display:flex;align-items:center;justify-content:center;background:rgba(0,0,0,.55)}
.card-titles{display:flex;flex-direction:column;align-items:center;gap:12px}
.card-subtitle{font-family:Montserrat,sans-serif;font-size:clamp(.75rem,1.5vw,1rem);font-weight:500;color:var(--kano-gold);text-transform:uppercase;letter-spacing:3px}
.card-overlay h2{font-family:Montserrat,sans-serif;font-size:clamp(1.8rem,4vw,3rem);font-weight:900;color:#fff;text-align:center;margin:0;background:linear-gradient(135deg,#fff 0%,rgba(255,255,255,.85) 100%);-webkit-background-clip:text;-webkit-text-fill-color:transparent;background-clip:text}
.small-cards{display:grid;grid-template-columns:1fr 1fr;gap:20px;margin-top:20px;opacity:0;transform:translateY(-200px);z-index:-1;position:relative;will-change:transform,opacity;transition:none}
.small-card{border-radius:16px;overflow:hidden;box-shadow:0 15px 40px rgba(0,0,0,.3);aspect-ratio:4/3;background:rgba(255,255,255,.12);backdrop-filter:blur(20px);-webkit-backdrop-filter:blur(20px);border:1px solid rgba(255,255,255,.25);display:flex;align-items:center;justify-content:center;padding:6px}
.mockup-frame-small{width:100%;height:100%;display:flex;align-items:center;justify-content:center;background:transparent;border-radius:8px}
.mockup-frame-small img{width:100%;height:100%;object-fit:contain;object-position:center}
.project-description{margin-top:30px;padding:20px 0;opacity:0;transform:translateY(30px);will-change:transform,opacity}
.project-description h3{font-family:Montserrat,sans-serif;font-size:1.3rem;font-weight:700;color:#fff;margin:0 0 16px 0}
.project-description h3:not(:first-child){margin-top:24px}
.project-description p{font-size:.9rem;color:var(--kano-light);opacity:.8;line-height:1.5;margin:0 0 15px 0}
.project-description p:last-of-type{margin-bottom:0}
.project-link{display:inline-block;margin-top:20px;font-family:Montserrat,sans-serif;font-size:.9rem;font-weight:600;color:var(--kano-gold);text-decoration:none;transition:opacity .3s ease}
.project-link:hover{opacity:.7}
.scroll-indicator{display:none;flex-direction:column;align-items:center;gap:16px;margin-top:40px;opacity:0;transform:translateY(20px);will-change:transform,opacity}
.scroll-indicator span{font-size:1rem;color:var(--kano-light);opacity:.6;font-weight:500;letter-spacing:.5px}
.scroll-arrow{width:56px;height:56px;border-radius:50%;border:1px solid rgba(212,175,55,.25);background:rgba(212,175,55,.05);display:flex;align-items:center;justify-content:center;color:var(--kano-gold);animation:float 3s ease-in-out infinite;transition:all .3s cubic-bezier(.34,.46,.35,1)}
.scroll-arrow:hover{background:rgba(212,175,55,.12);border-color:rgba(212,175,55,.4);transform:scale(1.08)}
.scroll-arrow svg{transition:transform .3s cubic-bezier(.34,.46,.35,1)}
.scroll-arrow:hover svg{transform:scale(1.15) rotate(8deg)}
@keyframes float{0%,100%{transform:translateY(0) translateZ(100px)}50%{transform:translateY(10px) translateZ(100px)}}
.scroll-hint{display:none;position:fixed;bottom:20px;left:50%;transform:translateX(-50%);flex-direction:column;align-items:center;gap:16px;opacity:0;will-change:opacity;transition:opacity .6s ease;pointer-events:none;z-index:999}
.scroll-hint.loaded{opacity:1}
.scroll-hint span{font-size:1.1rem;color:var(--kano-light);opacity:.7;font-weight:500;letter-spacing:.5px}
.scroll-hint-arrow{width:64px;height:64px;border-radius:50%;border:1px solid rgba(212,175,55,.25);background:rgba(212,175,55,.05);display:flex;align-items:center;justify-content:center;color:var(--kano-gold)}
.scroll-hint-arrow.floating{animation:float 3s ease-in-out infinite}
.scroll-hint-arrow svg{width:28px;height:28px}

@media (max-width:768px){
  .projet-delaunay{padding:40px 0;min-height:250vh}
  .container{padding:0 20px;top:80px}
  .small-cards{gap:12px;margin-top:12px}
  .small-card{aspect-ratio:3/4;padding:2px}
  .mockup-frame-small{padding:0}
  .mockup-frame-small img{object-fit:contain;transform:scale(1.80)}
  .card-back{padding:0}
  .mockup-frame{padding:16px}
  .card-overlay h2{font-size:1.5rem}
  .card-subtitle{font-size:.7rem;letter-spacing:2px}
  .card-titles{gap:8px}
  .project-description{margin-top:20px;padding:15px 0}
  .project-description h3{font-size:1.1rem;margin-bottom:12px}
  .project-description p{font-size:.85rem}
  .scroll-indicator{display:flex}
  .scroll-indicator span{font-size:.9rem}
  .scroll-arrow{width:48px;height:48px}
  .scroll-hint{display:flex;top:calc(80px + 52vw);bottom:auto}
  .scroll-hint span{font-size:.95rem}
  .scroll-hint-arrow{width:52px;height:52px}
}
@media (max-width:1024px){
  .scroll-indicator{display:flex}
  .scroll-hint{display:flex}
}
@media (max-width:480px){
  .container{top:70px}
  .card-overlay h2{font-size:1.3rem}
  .card-subtitle{font-size:.65rem}
}
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const section = document.querySelector('.projet-delaunay');
  const mainCard = section ? section.querySelector('.main-card') : null;
  const cardInner = section ? section.querySelector('.card-inner') : null;
  const smallCards = section ? section.querySelector('.small-cards') : null;
  const projectDescription = section ? section.querySelector('.project-description') : null;
  const scrollIndicator = section ? section.querySelector('.scroll-indicator') : null;
  const scrollHint = section ? section.querySelector('.scroll-hint') : null;
  const scrollHintArrow = section ? section.querySelector('.scroll-hint-arrow') : null;

  if (!section || !mainCard || !cardInner || !smallCards) return;

  setTimeout(() => {
    mainCard.classList.add('loaded');
    if (scrollHint) scrollHint.classList.add('loaded');
    if (scrollHintArrow) scrollHintArrow.classList.add('floating');
  }, 100);

  let viewportHeight = window.innerHeight;
  let viewportWidth = window.innerWidth;
  let isMobile = viewportWidth <= 1024;
  let sectionOffsetTop = section.offsetTop;

  const onResize = () => {
    viewportHeight = window.innerHeight;
    viewportWidth = window.innerWidth;
    isMobile = viewportWidth <= 1024;
    sectionOffsetTop = section.offsetTop;
  };

  window.addEventListener('resize', onResize);

  let targetScroll = window.scrollY || window.pageYOffset || 0;
  let virtualScroll = targetScroll;

  const easeInOutCubic = t => t < 0.5 ? 4 * t * t * t : 1 - Math.pow(-2 * t + 2, 3) / 2;
  const clamp01 = v => Math.max(0, Math.min(1, v));

  const updateWithScroll = () => {
    const sectionTop = sectionOffsetTop - virtualScroll;

    if (isMobile && virtualScroll < 80) {
      cardInner.style.transform = 'rotateY(0deg)';
      smallCards.style.opacity = '0';
      smallCards.style.transform = 'translateY(-200px)';
      if (projectDescription) {
        projectDescription.style.opacity = '0';
        projectDescription.style.transform = 'translateY(30px)';
      }
      return;
    }

    const startThreshold = isMobile ? viewportHeight * 0.8 : viewportHeight * 0.5;
    const endThreshold = isMobile ? -viewportHeight * 0.8 : -viewportHeight * 0.9;

    if (sectionTop > startThreshold) {
      cardInner.style.transform = 'rotateY(0deg)';
      smallCards.style.opacity = '0';
      smallCards.style.transform = 'translateY(-200px)';
      if (projectDescription) {
        projectDescription.style.opacity = '0';
        projectDescription.style.transform = 'translateY(30px)';
      }
      return;
    }

    const scrolledAmount = startThreshold - sectionTop;
    const scrollRange = startThreshold - endThreshold;

    const base = clamp01(scrolledAmount / scrollRange);
    let rawProgress;

    if (isMobile) {
      const delayed = (base - 0.25) / 0.75;
      rawProgress = clamp01(delayed);
    } else {
      rawProgress = base;
    }

    const scrollProgress = easeInOutCubic(rawProgress);

    let flipProgress;
    if (isMobile) {
      flipProgress = scrollProgress;
    } else {
      flipProgress = clamp01(scrollProgress / 0.5);
    }

    const flipAngle = flipProgress * 180;
    cardInner.style.transform = `rotateY(${flipAngle}deg)`;

    const cardsStart = scrollRange * 0.25;
    const cardsEnd = scrollRange * 0.8;
    const cardsRaw = (scrolledAmount - cardsStart) / (cardsEnd - cardsStart);
    const cardsClamped = clamp01(cardsRaw);
    const easedCards = easeInOutCubic(cardsClamped);
    const cardsY = 200 - easedCards * 200;
    const cardsOpacity = easedCards;
    smallCards.style.opacity = String(cardsOpacity);
    smallCards.style.transform = `translateY(-${cardsY}px)`;

    if (projectDescription) {
      const descStart = scrollRange * 0.5;
      const descEnd = scrollRange * 0.95;
      const descRaw = (scrolledAmount - descStart) / (descEnd - descStart);
      const descClamped = clamp01(descRaw);
      const easedDesc = easeInOutCubic(descClamped);
      projectDescription.style.opacity = String(easedDesc);
      projectDescription.style.transform = `translateY(${30 - easedDesc * 30}px)`;
    }

    if (scrollIndicator) {
      const indicatorStart = scrollRange * 0.75;
      const indicatorEnd = scrollRange * 1.1;
      const indicatorRaw = (scrolledAmount - indicatorStart) / (indicatorEnd - indicatorStart);
      const indicatorClamped = clamp01(indicatorRaw);
      const easedIndicator = easeInOutCubic(indicatorClamped);
      scrollIndicator.style.opacity = String(easedIndicator);
      scrollIndicator.style.transform = `translateY(${20 - easedIndicator * 20}px)`;
    }

    if (scrollHint) {
      const hintFadeEnd = scrollRange * 0.1;
      const hintProgress = clamp01(scrolledAmount / hintFadeEnd);
      scrollHint.style.opacity = String(1 - hintProgress);
    }
  };

  const animate = () => {
    const factor = isMobile ? 0.12 : 0.025;
    virtualScroll += (targetScroll - virtualScroll) * factor;
    updateWithScroll();
    requestAnimationFrame(animate);
  };

  window.addEventListener('scroll', () => {
    targetScroll = window.scrollY || window.pageYOffset || 0;
  }, { passive: true });

  cardInner.style.transition = 'none';
  smallCards.style.transition = 'none';
  if (projectDescription) projectDescription.style.transition = 'none';

  requestAnimationFrame(animate);
});
</script>