<script>
document.addEventListener('DOMContentLoaded', () => {
  const wrapper = document.querySelector('.carousel-wrapper');
  const track = document.querySelector('.carousel-track');
  const slides = document.querySelectorAll('.carousel-slide');
  if (!wrapper || !track || slides.length === 0) return;
  
  const totalSlides = slides.length;
  let currentIndex = 2;
  let isDragging = false;
  let startX = 0;
  let currentTranslate = 0;
  let prevTranslate = 0;
  
  function getGap() {
    return window.innerWidth > 768 ? 32 : 24;
  }
  
  function getSlideOffset(index) {
    const slideWidth = slides[0].offsetWidth;
    const gap = getGap();
    const centerOffset = wrapper.clientWidth / 2 - slideWidth / 2;
    return centerOffset - (index * (slideWidth + gap));
  }
  
  function updateSlides() {
    slides.forEach((slide, index) => {
      const distance = Math.abs(index - currentIndex);
      let scale, opacity, blur, rotateY;
      if (distance === 0) {
        scale = 1.08;
        opacity = 1;
        blur = 0;
        rotateY = 0;
      } else if (distance === 1) {
        scale = 0.88;
        opacity = 0.85;
        blur = 1.2;
        const direction = index > currentIndex ? 1 : -1;
        rotateY = direction * -6;
      } else {
        scale = 0.72;
        opacity = 0.5;
        blur = 3;
        const direction = index > currentIndex ? 1 : -1;
        rotateY = direction * -10;
      }
      slide.style.transform = `scale(${scale}) rotateY(${rotateY}deg)`;
      slide.style.opacity = opacity;
      slide.style.filter = `blur(${blur}px)`;
    });
  }
  
  function goToSlide(index) {
    currentIndex = Math.max(0, Math.min(index, totalSlides - 1));
    const offset = getSlideOffset(currentIndex);
    track.style.transform = `translateX(${offset}px)`;
    prevTranslate = offset;
    currentTranslate = offset;
    updateSlides();
  }
  
  function snapToNearest() {
    const slideWidth = slides[0].offsetWidth;
    const gap = getGap();
    const slideStep = slideWidth + gap;
    const movedBy = currentTranslate - prevTranslate;
    if (Math.abs(movedBy) > slideStep / 4) {
      if (movedBy < 0 && currentIndex < totalSlides - 1) currentIndex += 1;
      else if (movedBy > 0 && currentIndex > 0) currentIndex -= 1;
    }
    goToSlide(currentIndex);
  }
  
  function handleStart(e) {
    isDragging = true;
    startX = e.type.includes('mouse') ? e.clientX : e.touches[0].clientX;
    track.classList.add('no-transition');
  }
  
  function handleMove(e) {
    if (!isDragging) return;
    e.preventDefault();
    const currentX = e.type.includes('mouse') ? e.clientX : e.touches[0].clientX;
    const diff = currentX - startX;
    currentTranslate = prevTranslate + diff;
    track.style.transform = `translateX(${currentTranslate}px)`;
  }
  
  function handleEnd() {
    if (!isDragging) return;
    isDragging = false;
    track.classList.remove('no-transition');
    snapToNearest();
  }
  
  track.addEventListener('mousedown', handleStart);
  track.addEventListener('touchstart', handleStart, { passive: false });
  document.addEventListener('mousemove', handleMove);
  document.addEventListener('touchmove', handleMove, { passive: false });
  document.addEventListener('mouseup', handleEnd);
  document.addEventListener('touchend', handleEnd);
  
  goToSlide(2);
  window.addEventListener('resize', () => goToSlide(currentIndex));
});
</script>