const description = "Informations légales complètes concernant KANO, agence web & marketing située à Angers. Consultez nos mentions légales.";
---

<Layout title={title} description={description}>
  <section class="legal-page">
    <div class="container-legal">
      <h1>Mentions légales</h1>

      <h2>Éditeur du site</h2>
      <p>
        <strong>SAS KANO</strong><br />
        25 rue Lenepveu, 49100 Angers, France<br />
        SIRET : 94124147300011<br />
        Président : Elie Lhommeau<br />
        Directeur Général : Arthur Damas<br />
        Responsable de la publication : Les co-dirigeants
      </p>

      <h2>Hébergement</h2>
      <p>
        OVHcloud<br />
        2 rue Kellermann, 59100 Roubaix, France<br />
        Téléphone : +33 9 72 10 10 07
      </p>

      <h2>Contact</h2>
      <p>
        Email : contact@consultingkano.fr<br />
        Site : https://consultingkano.fr
      </p>

      <h2>Propriété intellectuelle</h2>
      <p>
        Le contenu du site (textes, images, vidéos, graphismes, code, etc.)
        est la propriété exclusive de la SAS KANO, sauf mention contraire.
        Toute reproduction ou utilisation sans autorisation est interdite.
      </p>

